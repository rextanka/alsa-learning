{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch Active File",
            "type": "cppdbg",
            "request": "launch",
            // This path now matches your new Makefile output structure
            "program": "${workspaceFolder}/bin/${fileBasenameNoExtension}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            // This ensures 'make' runs automatically before the debugger starts
            "preLaunchTask": "Make Build",
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}