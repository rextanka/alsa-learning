{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "ALSA: Launch with Arguments",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/${fileBasenameNoExtension}",
            // Use our custom input defined below
            "args": ["${input:getArgs}"], 
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "preLaunchTask": "Make Build",
            "miDebuggerPath": "/usr/bin/gdb"
        },
        {
            "name": "ALSA: Standard Launch (No Args)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/${fileBasenameNoExtension}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "preLaunchTask": "Make Build",
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ],
    "inputs": [
        {
            "id": "getArgs",
            "type": "promptString",
            "description": "Enter CLI arguments (e.g., -f 440 -d 2.5)",
            "default": ""
        }
    ]
}